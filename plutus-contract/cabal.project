-- Cabal project configuration for Cardano Escrow Contract
-- Use with: cabal build all

index-state: 2023-10-01T00:00:00Z

packages: .

-- Required for Plutus compilation
package plutus-tx-plugin
  flags: +defer-plugin-errors

-- Cardano Haskell packages repository
source-repository-package
    type: git
    location: https://github.com/input-output-hk/cardano-haskell-packages
    tag: repo

-- Additional repositories for Plutus dependencies
