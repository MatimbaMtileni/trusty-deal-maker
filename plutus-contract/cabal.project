-- GHC options for Plutus
program-options
    ghc-options: -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas

-- Allow newer versions for compatibility
allow-newer:
    *:base,
    *:ghc,
    *:template-haskell

-- Constraints for reproducible builds
constraints:
    aeson >= 2.0,
    hedgehog >= 1.0
